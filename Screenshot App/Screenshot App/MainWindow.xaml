<Window x:Class="Screenshot_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenshot_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto" FontSize="26" FontWeight="Bold" FontFamily="Bahnschrift">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{Binding PhotoSource}" Stretch="UniformToFill">
        </Image>
        <Button Command="{Binding StartCommand}" Grid.Row="1" Margin="10px" HorizontalAlignment="Center" Width="200"> Start</Button>
    </Grid>
</Window>
